<Page
    x:Class="iGym.ProfilKorisnik"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iGym"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

        <RelativePanel Background="Gray">
            <TextBlock Text="Profil korisnika" Margin="20,20"></TextBlock>
            <RelativePanel x:ConnectionId='1' x:Name="gornjiPanel" Background="LightSlateGray" HorizontalAlignment="Left" Height="304" Margin="36,60,0,0" VerticalAlignment="Top" Width="1206">
                <TextBlock x:ConnectionId='7'  Margin="10,10,10,10" x:Name="ident" Text="Identifikacioni podaci" ></TextBlock>
                <Image x:ConnectionId='8' Margin="10,10,30,20" x:Name="image"  Source="Assets/gymtime.jpg" HorizontalAlignment="Left" Height="216" VerticalAlignment="Top" Width="220" RelativePanel.Below="ident"/>
                <TextBlock x:ConnectionId='9' Margin="10,10,10,10" x:Name="ime" Text="Ime" RelativePanel.RightOf="image" RelativePanel.Below="ident"></TextBlock>
                <TextBlock x:ConnectionId='10' Margin="10,10,10,10" x:Name="prezime" Text="Prezime" RelativePanel.RightOf="image" RelativePanel.Below="ime"></TextBlock>
                <TextBlock x:ConnectionId='11' Margin="10,10,10,10" x:Name="spol" Text="Spol" RelativePanel.RightOf="image" RelativePanel.Below="prezime"></TextBlock>
                <TextBlock x:ConnectionId='12' Margin="10,10,10,10" x:Name="adresa" Text="Adresa" RelativePanel.RightOf="image" RelativePanel.Below="spol"></TextBlock>
                <TextBlock x:ConnectionId='13' Margin="10,10,10,10" x:Name="brTelefona" Text="Br. telefona" RelativePanel.RightOf="image" RelativePanel.Below="adresa"></TextBlock>
            </RelativePanel>
            <RelativePanel RelativePanel.Below="gornjiPanel" Background="LightSlateGray" Height="304" Width="1206" Margin="36,30,0,0">
                <TextBlock x:ConnectionId='2' x:Name="ostaliPodaci" Text="Ostali podaci" Margin="10,10,10,10"></TextBlock>
                <TextBlock x:ConnectionId='3' x:Name="visina" Text="Visina: " RelativePanel.Below="ostaliPodaci" Margin="20,40,10,10"></TextBlock>
                <TextBlock x:ConnectionId='4' x:Name="masa" Text="Masa: " RelativePanel.Below="visina" Margin="20,20,10,10"></TextBlock>
                <TextBlock x:ConnectionId='5' x:Name="cilj" Text="Cilj: " RelativePanel.Below="masa" Margin="20,20,10,10"></TextBlock>
                <TextBlock x:ConnectionId='6' x:Name="datum" Text="Datum posljednje uplate clanarine: " RelativePanel.RightOf="visina" RelativePanel.AlignVerticalCenterWith="visina" Margin="600,20,10,10"></TextBlock>
                <DatePicker Margin="673,0,-673,-112" RelativePanel.Below="datum" ></DatePicker>

            </RelativePanel>
        </RelativePanel>
    </Page>

